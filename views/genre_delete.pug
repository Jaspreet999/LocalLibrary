extends layout 

block content 

    h1 #{title} : #{genre.name}

    if genre_books.length 

        div(style='margin-left:20px;margin-top:20px')

            h4 Books
            p #[strong Delete these books first.]
            dl
                each book in genre_books
                    dt
                        a(href=book.url) #{book.title}
               

    else 
        p #[strong Do you really want to delete these books?]

        form(method = "POST" action= "")
            div.form-group
                input#genreid.form_control(type="hidden" , value = genre._id, required = true,  name='genreid')

            button.btn.btn-primary(type='submit') Delete   


            